@import 'normalize.min.css';
@import 'bootstrap.css';
@import 'stylish-portfolio.css';
@import '../font-awesome/css/font-awesome.css';
@import 'main.css';

@font-face 
    font-family 'citizen_slab'
    src url('../fonts/citizen_slab.eot')
    src url('../fonts/citizen_slab.eot?#iefix') format('embedded-opentype'),
         url('../fonts/citizen_slab.woff') format('woff'),
         url('../fonts/citizen_slab.ttf') format('truetype'),
         url('../fonts/citizen_slab.svg#citizen_slabregular') format('svg')
    font-weight normal
    font-style normal

@font-face 
    font-family 'district-thin'
    src url('../fonts/district-thin.eot')
    src url('../fonts/district-thin.eot?#iefix') format('embedded-opentype'),
        url('../fonts/district-thin.woff') format('woff'),
        url('../fonts/district-thin.ttf') format('truetype'),
        url('../fonts/district-thin.svg#ralewayregular') format('svg')
    font-weight normal
    font-style normal

body
    font-family 'district-thin'

h1, h2, h3
    font-family 'citizen_slab'

.header
    h1, h3
        color #fff
    
    h3
        margin 0 0 2em 0

.vert-text
    
    h1
        font-size 10em

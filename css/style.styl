@import 'normalize.min.css';
@import 'bootstrap.css';
@import 'stylish-portfolio.css';
@import 'font-awesome.min.css';
@import 'main.css';

/*** FONTS ***/
@font-face 
    font-family 'polaris-regular'
    src url('../fonts/polaris-regular.eot')
    src url('../fonts/polaris-regular.eot?#iefix') format('embedded-opentype'),
        url('../fonts/polaris-regular.woff') format('woff'),
        url('../fonts/polaris-regular.ttf') format('truetype'),
        url('../fonts/polaris-regular.svg#polaris-regular') format('svg')
    font-weight normal
    font-style normal

@font-face 
    font-family 'district-thin'
    src url('../fonts/district-thin.eot')
    src url('../fonts/district-thin.eot?#iefix') format('embedded-opentype'),
        url('../fonts/district-thin.woff') format('woff'),
        url('../fonts/district-thin.ttf') format('truetype'),
        url('../fonts/district-thin.svg#ralewayregular') format('svg')
    font-weight normal
    font-style normal

/*** VARIABLES ***/
btnGray = #666
borderGray = lighten(btnGray, 10%)
formError = #ff6
//Bootstrap native error color #953b39
linkColor = #666
linkHover = lighten(linkColor, 30%)

/*** MIXINS ***/


/*** SHARED ELMENTS ***/
body
    font-family 'district-thin'

h1, h2, h3
    font-family 'polaris-regular'

h2
    line-height 38px

hr
    height 30px
    border-style solid
    border-color #fff
    border-width 1px 0 0 0
    border-radius 20px
    margin 0 auto
    margin-top -15px
    width 300px

hr:before 
    display block
    content ""
    height 30px
    margin-top -31px    
    border-style solid
    border-color #fff
    border-width 0 0 1px 0
    border-radius 20px

.header
    h1, h3
        color #fff
        margin-bottom 0
    
    h3
        font-size 4em
        margin -19px 0 2em 0

    a
        margin-top -30px

.vert-text
    h1
        font-size 10em

/*** SIDEBAR NAVIGATION **/
#menu-toggle
    background-color btnGray
    border-color borderGray

.sidebar-nav
    font-size 14px

/*** OUR ARTISTS ***/
.img-circle
    border solid 3px #fff

.artist-profile
    font-size 18px

/*** CONTACT ***/
form
    margin 0 auto
    margin-top 40px
    width 400px

.form_error
    color formError
    display none
    font-size 15px
    margin-top 14px
    text-align left

.submit_error a
    color formError
    line-height 30px
    text-decoration underline

.form-control
    color #090909
    font-size 20px
    padding-top 9px

/** OVERRIDING BOOTSTRAP FORM ERROR INPUT CLASS **/
.has-error .form-control
    border-color formError

/** TODO: STYLE PLACEHOLDER TEXT COLOR DARKER JUST A BIT TO INCREASE CONTRAST **/

/** CONTACT SUBMISSION MODAL **/

.modal-dialog 
    width 300px

    h4
        font-family 'polaris-regular'
        text-align center

    p
        font-size 18px
        text-align center

.modal-backdrop
    background-color rgba(0,0,0,0.7)

/** LOCATION **/
.map
    height 600px
    width 100%

/*** FOOTER ***/

footer

    a
        color linkColor
        
        &:hover
            color linkHover

